	private static void mostrarMenu() {
		System.out.println("------------------------------------------------------");
		System.out.println("OPERACIONES CON DEPARTAMENTOS");
		System.out.println("  1. Ejercicio 1. Listar productos.");
		System.out.println("  2. Ejercicio 2. Listar ventas.");
