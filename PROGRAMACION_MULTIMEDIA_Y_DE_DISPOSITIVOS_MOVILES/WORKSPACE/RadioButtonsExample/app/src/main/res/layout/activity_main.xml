<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="384dp"
        android:layout_height="42dp"
        android:fontFamily="@font/audiowide"
        android:text="¿Cuál es tu equipo de fútbol favorito?"
        android:textColor="#EAE4E5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <CheckBox
        android:id="@+id/chkFutbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="Me gusta el fútbol"
        android:textColor="#FFFFFF"
        app:buttonTint="#FFA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="373dp"
        android:layout_height="40dp"
        android:fontFamily="@font/audiowide"
        android:textAlignment="center"
        android:textColor="#FFA5"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.489" />

    <RadioGroup
        android:id="@+id/rgTeams"
        android:layout_width="327dp"
        android:layout_height="209dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176">

        <RadioButton
            android:id="@+id/rbTala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFF"
            android:fontFamily="@font/audiowide"
            android:text="Talavera C.F."
            android:textColor="#FFFFFF"
            app:buttonTint="#FFA5" />

        <RadioButton
            android:id="@+id/rbMadrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FF9100"
            android:fontFamily="@font/audiowide"
            android:text="Real Madrid C.F"
            android:textColor="#FFFFFF"
            app:buttonTint="#FFA5" />

        <RadioButton
            android:id="@+id/rbBarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:text="F.C Barcelona"
            android:textColor="#FFFFFF"
            app:buttonTint="#FFA5" />

        <RadioButton
            android:id="@+id/rbValencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:text="Valencia C.F"
            android:textColor="#FFFFFF"
            app:buttonTint="#FFA5" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966"
        app:srcCompat="@mipmap/jugador"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>