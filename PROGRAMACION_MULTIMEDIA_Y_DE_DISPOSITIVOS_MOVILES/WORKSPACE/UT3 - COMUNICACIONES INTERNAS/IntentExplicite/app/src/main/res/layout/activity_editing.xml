<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditingActivity">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1C1C1C"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTituloSecundario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/baloo"
            android:text="ConfiguraciÃ³n"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editTextURL"
            android:layout_width="267dp"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:hint="Introduce URL"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1B1B1" />

        <Button
            android:id="@+id/buttonGuardarURL"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#00FFFFFF"
            android:drawableLeft="@drawable/baseline_save_24"
            android:fontFamily="@font/baloo"
            android:text="Guardar URL"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="3dp" />

        <EditText
            android:id="@+id/editTextTextCorreo"
            android:layout_width="267dp"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:hint="Introduce Correo"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1B1B1" />

        <EditText
            android:id="@+id/editTextTextAsunto"
            android:layout_width="266dp"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:hint="Introduce Asunto"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1B1B1" />

        <EditText
            android:id="@+id/editTextTextMensaje"
            android:layout_width="266dp"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:hint="Introduce Mensaje"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1B1B1" />

        <Button
            android:id="@+id/buttonGuardarCorreo"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00FFFFFF"
            android:drawableLeft="@drawable/baseline_save_24"
            android:fontFamily="@font/baloo"
            android:text="Guardar Correo"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#00000000"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:fontFamily="@font/baloo"
            android:text="Volver"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="3dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>